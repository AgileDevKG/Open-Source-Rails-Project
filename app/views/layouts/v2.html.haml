!!! Strict
%html{html_attrs}
  %head
    %meta{"http-equiv" => "Content-type", "content" => "text/html; charset=utf-8"}
    = title :site => AppConfig.site_name
    = meta_tags
    
    = v2_stylesheets

    = javascripts
    = yield :head
        
    = auto_discovery_link_tag(:atom, AppConfig.rss_url || formatted_projects_url(:atom), :title => "Latest Projects")
    
  %body
    .page-content
      = partial "layouts/header"
      = flash_boxes
      = yield

    .body-bottom
      .page-content
        -# = partial "layouts/board"
        = partial "layouts/footer"

        #footer
          #footer_copyrights
          #footer_ask
          = clear
    