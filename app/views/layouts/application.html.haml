!!! Strict
%html{html_attrs}
  %head
    %meta{"http-equiv" => "Content-type", "content" => "text/html; charset=utf-8"}
    = title :site => AppConfig.site_name
    = meta_tags
    
    = stylesheets
    = javascripts

    = yield :head
        
    = auto_discovery_link_tag(:atom, AppConfig.rss_url || formatted_projects_url(:atom), :title => "Latest Projects")
    
  %body
    .body-main
      .page-content
        = partial "layouts/header"
        = flash_boxes
        = yield
        = clear
    .body-bottom
      .page-content
        = partial "layouts/footer"
        
    - if production?
      = partial "layotus/tracking"
    