#project_grid
  - if local_assigns[:projects]

    - unless local_assigns[:grid_title].blank?
      %h3= local_assigns[:grid_title]
    - else
      = search_or_tag_title
    

    -# Display projects
    - reset_cycle
    .projects= partial projects
  
    - if projects.empty?
      %p.empty
        - if params[:q].blank?
          = local_assigns[:empty_message] || "No applications currently exist in the gallery"
          = br*2
        
      
    -# display paging
    = clear
    .loading.right{hidden}= image_tag("loading.gif", :alt => "Loading...")
    = paging(projects)